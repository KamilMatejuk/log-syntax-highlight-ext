{
  "manifest_version": 3,
  "name": "Jenkins Pipeline Log Highlighter",
  "version": "1.1",
  "description": "Highlight syntax in logs from Jenkins Pipelines.",
  "permissions": ["activeTab", "storage"],
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["values.js", "utils.js", "content.js"]
    }
  ],
  "options_page": "options.html"
}
